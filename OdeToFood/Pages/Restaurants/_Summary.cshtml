@using OdeToFood.Core
@model Restaurant

<div>
    <div>
        <h3>@Model.Name</h3>
    </div>
    <div>
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div>
        <a class="btn btn-outline-info"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            Info
        </a>
        <a class="btn btn-outline-info"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="btn btn-outline-danger"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>
